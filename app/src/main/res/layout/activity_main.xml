<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"    android:background="#aa2b3699">
    ls:context=".MainActivity"

    <TextView android:text="Email: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_marginTop="60dp"
        android:textSize="40dp"
        android:textColor="#b329b1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/usernamebox"
        android:layout_below="@+id/username"
        android:layout_centerInParent="true"/>

    <TextView android:text="Password: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usernamebox"
        android:layout_centerInParent="true"
        android:textSize="40dp"
        android:textColor="#b329b1"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/passwordbox"
        android:layout_below="@+id/password"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordbox"
        android:text="Enter"
        android:layout_centerInParent="true"
        android:background="#313bb3"
        android:textColor="#61b344"
        android:id="@+id/enter"/>

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textColor="#b31c39"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:layout_centerInParent="true"
        android:layout_below="@+id/enter"
        android:text="Create an Account"
        android:background="#2d32ff"/>


</RelativeLayout>
